<p id="notice"><%= notice %></p>

<p>
  <strong>Filename:</strong>
  <%= @file_imported.filename %>
</p>

<p>
  <strong>Status:</strong>
  <%= @file_imported.status %>
</p>

<p>
  <strong>User:</strong>
  <%= @file_imported.user_id %>
</p>

<% if @sucess_contacts %>
  <h5>Success contacts created: </h5>
  <%= @sucess_contacts.count %>
  <br>
  <hr>
  <h5>Failed contacts</h5>
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Birthdate</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Credit card</th>
        <th>Franchise</th>
        <th>Email</th>
        <th>Error</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @failed_contacts.each_with_index do |contact, i| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.birthdate %></td>
          <td><%= contact.phone %></td>
          <td><%= contact.address %></td>
          <td><%= contact.credit_card %></td>
          <td><%= contact.franchise %></td>
          <td><%= contact.email %></td>
          <td><%= @failed_contacts_msgs[i] %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>

<%= link_to 'Edit', edit_file_imported_path(@file_imported) %> |
<%= link_to 'Back', file_importeds_path %>
